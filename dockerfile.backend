FROM python:3.11-slim

WORKDIR /app

COPY pyproject.toml .

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir "fastapi" "uvicorn[standard]" "httpx" "pydantic"

COPY src ./src

EXPOSE 8000

CMD ["uvicorn", "currency_converter.main:app", "--host", "0.0.0.0", "--port", "8000"]